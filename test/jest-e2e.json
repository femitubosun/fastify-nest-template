{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/../src/$1",
    "^@infra/(.*)$": "<rootDir>/../src/infrastructure/$1",
    "^@common/(.*)$": "<rootDir>/../src/common/$1",
    "^@identity/(.*)$": "<rootDir>/../src/identity/$1"
  }
}
